    android:layout_height="match_parent"
    android:background="#e9e4e5">

    <TextView
        android:id="@+id/TextViewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/TextViewDataFabricatiei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/TextViewPret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/TextViewCuloare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/TextViewMotorizare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>